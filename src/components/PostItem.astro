
---
export interface Props { entry: any; }
const { entry } = Astro.props;
const data = entry.data;
---
<article class="panel p-4 hover:shadow-glow transition">
  <h3 class="text-xl font-semibold"><a href={`/essays/${entry.slug}/`}>{data.title}</a></h3>
  {data.abstract && <p class="text-zinc-400 mt-1">{data.abstract}</p>}
  <p class="text-xs text-zinc-500 mt-1">{new Date(data.date).toDateString()} â€” {data.tags?.join(', ')}</p>
</article>
