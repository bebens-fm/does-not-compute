
---
export interface Props { item: any; }
const { item } = Astro.props;
const d = item.data;
---
<li class="py-3 hover:bg-zinc-900/40 transition">
  <a class="font-semibold hover:text-cyan-400 underline decoration-cyan-400" href={`/library/${item.slug}/`}>{d.title}</a>
  <span class="block text-sm text-zinc-400">{d.type} · {d.author} · {d.year}</span>
  {d.tags && <span class="block text-xs text-zinc-500">{d.tags.join(', ')}</span>}
</li>
