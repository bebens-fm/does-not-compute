
---
import Base from '@/layouts/Base.astro';
import { getCollection } from 'astro:content';
const items = (await getCollection('notes')).sort((a,b)=> new Date(b.data.date) - new Date(a.data.date));
---
<Base title="Notes">
  <h1 class="text-2xl font-semibold mb-6 tracking-widest">/notes</h1>
  <div class="panel p-4 space-y-3">
    {items.map((it) => (
      <div class="bg-zinc-900/70 p-3 rounded-lg border border-cyan-400/20">
        <p class="text-sm">{it.body ?? ''}</p>
        <p class="text-[11px] text-zinc-500 mt-1">{new Date(it.data.date).toDateString()}</p>
      </div>
    ))}
  </div>
</Base>
